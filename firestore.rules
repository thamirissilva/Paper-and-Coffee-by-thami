
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que o usuário acesse apenas seus próprios dados dentro do caminho users/UID/data/...
    // Isso garante a privacidade dos dados de cada papelaria.
    match /users/{userId}/data/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
